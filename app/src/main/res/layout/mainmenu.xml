<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prepareButton"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prepare"
        android:id="@+id/prepareText"
        android:layout_alignTop="@+id/prepareButton"
        android:layout_toRightOf="@+id/prepareButton"
        android:layout_toEndOf="@+id/prepareButton"
        android:layout_alignBottom="@+id/prepareButton"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report Damage"
        android:id="@+id/damageReportText"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/reportDamageButton"
        android:layout_toEndOf="@+id/reportDamageButton"
        android:layout_below="@+id/prepareButton"
        android:layout_above="@+id/disasterResourcesText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Disaster Resources"
        android:id="@+id/disasterResourcesText"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/disasterResourcesButton"
        android:layout_toRightOf="@+id/disasterResourcesButton"
        android:layout_toEndOf="@+id/disasterResourcesButton"
        android:layout_below="@+id/reportDamageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportDamageButton"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_below="@+id/prepareButton"
        android:layout_alignLeft="@+id/prepareButton"
        android:layout_alignStart="@+id/prepareButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disasterResourcesButton"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_below="@+id/reportDamageButton"
        android:layout_alignLeft="@+id/reportDamageButton"
        android:layout_alignStart="@+id/reportDamageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alerts and Warnings"
        android:id="@+id/awText"
        android:layout_below="@+id/disasterResourcesText"
        android:layout_alignLeft="@+id/disasterResourcesButton"
        android:layout_alignStart="@+id/disasterResourcesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="25dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/awText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
